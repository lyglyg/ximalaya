<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_track_id"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/album_detail_text_gray_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_track_id">

        <TextView
            android:id="@+id/tv_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:lines="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_track_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"
                android:textColor="@color/album_detail_text_gray_color"
                android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="3dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_track_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="05:33"
                android:textColor="@color/album_detail_text_gray_color"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="3dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_track_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="2020-02-02"
                android:gravity="right"
                android:textSize="14sp"
                android:textColor="@color/album_detail_text_gray_color"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>